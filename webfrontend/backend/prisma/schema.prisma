// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  user_id      Int       @id @default(autoincrement())
  name         String
  email        String    @unique
  password_hash String
  role         Role      @default(USER)
  created_at   DateTime  @default(now())
  updated_at   DateTime  @updatedAt
  
  connections  Connection[]
  jobs         Job[]
  
  @@map("users")
}

model Connection {
  connection_id Int      @id @default(autoincrement())
  user_id       Int
  platform_name String
  api_token     String
  last_sync     DateTime?
  created_at    DateTime @default(now())
  updated_at    DateTime @updatedAt
  
  user          User     @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  
  @@map("connections")
}

model Job {
  job_id       Int            @id @default(autoincrement())
  user_id      Int
  platform_name String
  job_title    String
  company_name String?
  status       JobStatus      @default(APPLIED)
  applied_on   DateTime       @default(now())
  created_at   DateTime       @default(now())
  updated_at   DateTime       @updatedAt
  
  user         User           @relation(fields: [user_id], references: [user_id], onDelete: Cascade)
  
  @@map("jobs")
}

enum Role {
  USER
  ADMIN
}

enum JobStatus {
  APPLIED
  SHORTLISTED
  REJECTED
  INTERVIEW
  OFFER
  ACCEPTED
  WITHDRAWN
}


model UnstopJob {
  job_url      String   @id @db.VarChar(500)
  title        String?  @db.VarChar(500)
  organization String?  @db.VarChar(300)
  type         String?  @db.VarChar(100)
  location     String?  @db.VarChar(300)
  deadline     String?  @db.VarChar(200)
  applicants   String?  @db.VarChar(100)
  salary       String?  @db.VarChar(200)
  experience   String?  @db.VarChar(200)
  description  String?  @db.Text
  skills       String?  @db.Text
  posted_date  String?  @db.VarChar(100)
  page         Int?
  freshness    String?  @db.VarChar(50)
  first_seen   DateTime @default(now()) @db.Timestamp(0)
  last_seen    DateTime @default(now()) @updatedAt @db.Timestamp(0)
  data_hash    String?  @db.Char(64)

  @@map("unstop_jobs")
}

model NaukriJob {
  job_url      String   @id @db.VarChar(500)
  job_name     String?  @db.VarChar(300)
  company      String?  @db.VarChar(300)
  rating       String?  @db.VarChar(50)
  reviews      String?  @db.VarChar(100)
  experience   String?  @db.VarChar(200)
  salary       String?  @db.VarChar(200)
  location     String?  @db.VarChar(300)
  posted       String?  @db.VarChar(100)
  openings     String?  @db.VarChar(100)
  applicants   String?  @db.VarChar(100)
  page         Int?
  freshness    String?  @db.VarChar(50)
  function_gid String?  @db.VarChar(50)
  first_seen   DateTime @default(now()) @db.Timestamp(0)
  last_seen    DateTime @default(now()) @updatedAt @db.Timestamp(0)
  data_hash    String?  @db.Char(64)

  @@map("naukri_jobs")
}

model Internship {
  internship_url String   @id @db.VarChar(500)
  title          String?  @db.VarChar(300)
  company        String?  @db.VarChar(300)
  location       String?  @db.VarChar(300)
  stipend        String?  @db.VarChar(200)
  duration       String?  @db.VarChar(100)
  start_date     String?  @db.VarChar(100)
  apply_by       String?  @db.VarChar(100)
  applicants     String?  @db.VarChar(100)
  skills         String?  @db.Text
  openings       String?  @db.VarChar(100)
  category       String?  @db.VarChar(100)
  page           Int?
  data_hash      String?  @db.Char(64)
  first_seen     DateTime @default(now()) @db.Timestamp(0)
  last_seen      DateTime @default(now()) @updatedAt @db.Timestamp(0)

  @@map("internships")
}
